@model IEnumerable<ListResevationViewModel>

<h3>Мои бронирования</h3>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(k => k.Name)</th>
            <th>@Html.DisplayNameFor(k => k.Author)</th>
            <th>@Html.DisplayNameFor(k => k.Genre)</th>
            <th>@Html.DisplayNameFor(k => k.Publisher)</th>
            <th>@Html.DisplayNameFor(k => k.Status)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Name</td>
                <td>@book.Author</td>
                <td>@book.Genre</td>
                <td>@book.Publisher</td>
                <td>@Library.Services.GetEmunName.GetName(book.Status)</td>
                <td>
                    <a class="btn btn-danger" asp-action="BookInfo" asp-controller="Home"
                   asp-route-id="@book.BookId">Просмотр</a>
                    <a class="btn btn-danger" asp-action="CancelReservation" asp-controller="Order"
                   asp-route-id="@book.Id">Отменить бронирование</a>
                </td>
            </tr>
        }
    </tbody>
</table>